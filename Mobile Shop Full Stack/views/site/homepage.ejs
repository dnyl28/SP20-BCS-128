<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="row">
          <% for( let i = 0; i < products.length; i++ ) { %>
            <div class="card text-black">
              <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
              <img src="/images/uploaded/<%= products[i].image %> "
                class="card-img-top" alt="Apple Computer" />
              <div class="card-body">
                <div class="text-center">
                  <p class="text-muted mb-4"><%= products[i].name %> </p>
                </div>
                <div>
                  <div class="d-flex justify-content-between">
                    <span><%= products[i].storage %> </span>
                  </div>
                  <div class="d-flex justify-content-between">
                    <span><%= products[i].description %></span>
                  </div>
                  <div class="d-flex justify-content-between">
                    <span><%= products[i].color %> </span>
                  </div>
                </div>
                <div class="d-flex justify-content-between total font-weight-bold mt-4">
                  <span>Total</span><span><%= products[i].price %> </span>
                </div>
              </div>
            </div>
            <a href="/add-cart/<%=products[i]._id %>" class="btn btn-info w-full"
              >Add To Cart</a
            >
          <% } %>
      </div>
    </div>
    </div>
  </div>
</section>